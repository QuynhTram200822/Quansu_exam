@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Translate
@inject IViewLocalizer TranslateValidation
@{
    ViewData["Title"] = Translate["FacultyManagement"];
    var breadcrumb = new List<(string Text, string Url)>
    {
        (Translate["Dashboard"], "/dashboard"),
        (Translate["FacultyManagement"], null!)
    };
}

@section Styles
{
    <!-- CSS -->
    <link href="~/assets/js/cropper.min.css" rel="stylesheet" asp-append-version="true" />
    <style>
        <style >
        /* CSS để xử lý tỉ lệ rộng */
        .cropper-container {
            max-width: 100% !important;
        }

        #crop-container {
            height: 400px;
            background-color: #f8f9fa;
            border: 1px solid #ddd;
            border-radius: 4px;
            overflow: hidden;
        }

            #crop-container img {
                max-width: 100%;
                display: block;
            }

        /* Điều chỉnh kích thước của cropper view */
        .cropper-view-box {
            outline: 1px solid #fff;
            outline-color: rgba(255, 255, 255, 0.75);
        }

        /* Làm cho thanh công cụ cropper dễ nhìn hơn */
        .cropper-point {
            width: 10px;
            height: 10px;
            background-color: rgba(49, 170, 222, 0.75);
        }

        /* Hiển thị ảnh preview tốt hơn */
        #image-preview {
            max-width: 100%;
            height: auto;
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 5px;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

        #image-preview-logo {
            max-width: 100%;
            height: auto;
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 5px;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

        /* Thêm style cho thông tin kích thước */
        #crop-dimensions {
            font-size: 0.85rem;
            color: #6c757d;
            font-weight: normal;
        }

        .custom-file-label::after {
            content: none !important;
        }
    </style>
}

@section Scripts {
    <script src="~/assets/libs/mustache/mustache.min.js" asp-append-version="true"></script>
    <script src="~/assets/js/cropper.min.js" asp-append-version="true"></script>
    <script src="~/admin-app/controllers/department/index.js" asp-append-version="true"></script>
    <script>
        var localization = {
            slugRequired: '@Html.Raw(TranslateValidation["Slug_Required"].Value)',
            slugMinLength: '@Html.Raw(TranslateValidation["Slug_MinLength"].Value)',
            slugMaxLength: '@Html.Raw(TranslateValidation["Slug_MaxLength"].Value)',
            slugValid: '@Html.Raw(TranslateValidation["Slug_Valid"].Value)',
            slugFormatRule: '@Html.Raw(TranslateValidation["Slug_FormatRule"].Value)',
            croppedImageLogoRequired: '@Html.Raw(TranslateValidation["CroppedImageLogo_Required"].Value)',
            nameRequired: '@Html.Raw(TranslateValidation["Name_Required"].Value)',
            nameMinLength: '@Html.Raw(TranslateValidation["Name_MinLength"].Value)',
            nameMaxLength: '@Html.Raw(TranslateValidation["Name_MaxLength"].Value)',
            emailRequired: '@Html.Raw(TranslateValidation["Email_Required"].Value)',
            emailInvalid: '@Html.Raw(TranslateValidation["Email_Invalid"].Value)',
            emailMaxLength: '@Html.Raw(TranslateValidation["Email_MaxLength"].Value)',
            phoneNumberRequired: '@Html.Raw(TranslateValidation["PhoneNumber_Required"].Value)',
            phoneNumberDigits: '@Html.Raw(TranslateValidation["PhoneNumber_Digits"].Value)',
            phoneNumberMinLength: '@Html.Raw(TranslateValidation["PhoneNumber_MinLength"].Value)',
            phoneNumberMaxLength: '@Html.Raw(TranslateValidation["PhoneNumber_MaxLength"].Value)',
            address1Required: '@Html.Raw(TranslateValidation["Address1_Required"].Value)',
            address1MinLength: '@Html.Raw(TranslateValidation["Address1_MinLength"].Value)',
            address1MaxLength: '@Html.Raw(TranslateValidation["Address1_MaxLength"].Value)',
            address2MaxLength: '@Html.Raw(TranslateValidation["Address2_MaxLength"].Value)',
            facebookUrlInvalid: '@Html.Raw(TranslateValidation["FacebookUrl_Invalid"].Value)',
            facebookUrlMaxLength: '@Html.Raw(TranslateValidation["FacebookUrl_MaxLength"].Value)',
            wikipediaUrlInvalid: '@Html.Raw(TranslateValidation["WikipediaUrl_Invalid"].Value)',
            wikipediaUrlMaxLength: '@Html.Raw(TranslateValidation["WikipediaUrl_MaxLength"].Value)',
            youtubeUrlInvalid: '@Html.Raw(TranslateValidation["YoutubeUrl_Invalid"].Value)',
            youtubeUrlMaxLength: '@Html.Raw(TranslateValidation["YoutubeUrl_MaxLength"].Value)',
            croppedImageRequired: '@Html.Raw(TranslateValidation["CroppedImage_Required"].Value)',
            notificationCrop: '@Html.Raw(Translate["NoteCrop"].Value)',
            notificationErrorAjax: '@Html.Raw(Translate["CouldNotConnectToServer."].Value)',
            saving: '@Html.Raw(Translate["Saving"].Value)',
            save: '@Html.Raw(Translate["Save"].Value)',
            selectImage: '@Html.Raw(Translate["SelectImageFile"].Value)',
            addDepartment: '@Html.Raw(TranslateValidation["AddDepartmentTitle"].Value)',
        };
        var departmentObj = new DepartmentController();
        departmentObj.initialize();
    </script>
    <script>
        // Custom file input styling
        $('.custom-file-input').on('change', function() {
            var fileName = $(this).val().split('\\').pop();
            if (fileName) {
                $(this).next('.custom-file-label').html(fileName);
            } else {
                $(this).next('.custom-file-label').html('@Html.Raw(Translate["SelectImageFile"])');
            }
        });
    </script>
}

<!-- Breadcrumb -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex justify-content-between align-items-center">
            <div>
                <h4 class="page-title">@ViewData["Title"]</h4>
            </div>
            <div>
                @await Html.PartialAsync("_BreadcrumbPartial", breadcrumb)
            </div>
        </div>
    </div>
</div>

<!-- Filter -->
<div class="row">
    <div class="col-12">
        <div class="card-box">
            <div class="row">
                <div class="col-lg-8">
                    <form class="form-inline" id="form-filter">
                        <div class="form-group col-md-6" style="padding-left: 0px !important;">
                            <label class="sr-only" for="txtKeyword">@Translate["Search"]</label>
                            <input type="text" id="txtKeyword" class="form-control col-md-12" placeholder="@Translate["PlaceholderSearchFaculty"]">
                        </div>
                        <button type="button" id="btn-search" class="btn btn-primary">
                            <i class="mdi mdi-magnify mr-1"></i> @Translate["Search"]
                        </button>
                    </form>
                </div>
                <div class="col-lg-4 text-lg-right mt-3 mt-lg-0">
                    <button type="button" class="btn btn-danger waves-effect waves-light float-right" id="btn-add-department">
                        <i class="mdi mdi-plus-circle mr-1"></i> @Translate["AddNew"]
                    </button>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Table -->
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered mb-0">
                <thead>
                    <tr>
                        <th>@Translate["No"]</th>
                        <th>@Translate["NameFaculty"]</th>
                        <th>@Translate["PhoneNumber"]</th>
                        <th>Email</th>
                        <th>Url</th>
                        <th class="text-center">@Translate["Action"]</th>
                    </tr>
                </thead>
                <tbody id="tbl-content"></tbody>
            </table>
        </div>

        <partial name="_PaginationPartial" />
    </div>
</div>

<!-- Mustache Template -->
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td>{{DisplayOrder}}</td>
        <td>{{{Name}}}</td>
        <td>{{PhoneNo}}</td>
        <td>{{Email}}</td>
        <td>{{{Url}}}</td>
        <td class="text-center">
            <a href="#" class="btn btn-xs btn-info btn-edit" data-id="{{Id}}" data-name="{{Name}}"><i class="fe-edit-2"></i></a>
            <a href="#" data-id="{{Id}}" class="btn btn-xs btn-danger btn-delete"><i class="fe-trash-2"></i></a>
        </td>
    </tr>
</script>
@await Html.PartialAsync("_AddEditModal")
