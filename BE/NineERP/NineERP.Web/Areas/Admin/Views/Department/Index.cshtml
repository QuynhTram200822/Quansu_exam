@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Translate

@{
    ViewData["Title"] = "Quản lý Khoa";
    var breadcrumb = new List<(string Text, string Url)>
    {
        ("Bảng tin", "/dashboard"),
        ("Quản lý Khoa", null!)
    };
}

@section Styles
{
    <!-- CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" />
    <style>
        <style >
        /* CSS để xử lý tỉ lệ rộng */
        .cropper-container {
            max-width: 100% !important;
        }

        #crop-container {
            height: 400px;
            background-color: #f8f9fa;
            border: 1px solid #ddd;
            border-radius: 4px;
            overflow: hidden;
        }

            #crop-container img {
                max-width: 100%;
                display: block;
            }

        /* Điều chỉnh kích thước của cropper view */
        .cropper-view-box {
            outline: 1px solid #fff;
            outline-color: rgba(255, 255, 255, 0.75);
        }

        /* Làm cho thanh công cụ cropper dễ nhìn hơn */
        .cropper-point {
            width: 10px;
            height: 10px;
            background-color: rgba(49, 170, 222, 0.75);
        }

        /* Hiển thị ảnh preview tốt hơn */
        #image-preview {
            max-width: 100%;
            height: auto;
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 5px;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

        /* Thêm style cho thông tin kích thước */
        #crop-dimensions {
            font-size: 0.85rem;
            color: #6c757d;
            font-weight: normal;
        }

        .custom-file-label::after {
            content: none !important;
        }
    </style>
}

@section Scripts {
  

    <script src="~/assets/libs/mustache/mustache.min.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>
    <script src="~/admin-app/controllers/department/index.js" asp-append-version="true"></script>
    <script>
         var departmentObj = new DepartmentController();
        departmentObj.initialize();

        window.localization = {
            ConfirmDeleteTitle: '@Translate["ConfirmDeleteTitle"]',
            ConfirmDeleteText: '@Translate["ConfirmDeleteText"]',
            ConfirmChangeStatusTitle: '@Translate["ConfirmChangeStatusTitle"]',
            ConfirmChangeStatusText: '@Translate["ConfirmChangeStatusText"]',
            Yes: '@Translate["Yes"]',
            No: '@Translate["No"]',
            EmailConfirmed: '@Translate["Confirmed"]',
            EmailUnconfirmed: '@Translate["Unconfirmed"]',
            Active: '@Translate["Active"]',
            Block: '@Translate["Block"]',
            Trial: '@Translate["Trial"]',
            Regular: '@Translate["Regular"]',
            Vip: '@Translate["Vip"]',
            Business: '@Translate["Business"]'
        };
    </script>
    <script>
        // Custom file input styling
        $('.custom-file-input').on('change', function() {
            var fileName = $(this).val().split('\\').pop();
            if (fileName) {
                $(this).next('.custom-file-label').html(fileName);
            } else {
                $(this).next('.custom-file-label').html('Chọn file ảnh');
            }
        });
    </script>
}

<!-- Breadcrumb -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex justify-content-between align-items-center">
            <div>
                <h4 class="page-title">@ViewData["Title"]</h4>
            </div>
            <div>
                @await Html.PartialAsync("_BreadcrumbPartial", breadcrumb)
            </div>
        </div>
    </div>
</div>

<!-- Filter -->
<div class="row">
    <div class="col-12">
        <div class="card-box">
            <div class="row">
                <div class="col-lg-8">
                    <form class="form-inline" id="form-filter">
                        <div class="form-group mb-2 mr-2">
                            <label class="sr-only" for="txtKeyword">Search</label>
                            <input type="text" id="txtKeyword" class="form-control" placeholder="Tên khoa">
                        </div>
                        <button type="button" id="btn-search" class="btn btn-primary mb-2">
                            <i class="mdi mdi-magnify mr-1"></i> @Translate["Search"]
                        </button>
                    </form>
                </div>
                <div class="col-lg-4 text-lg-right mt-3 mt-lg-0">
                    <button type="button" class="btn btn-danger waves-effect waves-light float-right mb-3" id="btn-add-department">
                        <i class="mdi mdi-plus-circle mr-1"></i> @Translate["Add New"]
                    </button>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Table -->
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered mb-0">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Khoa</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th>Url</th>
                        <th class="text-center">Chức năng</th>
                    </tr>
                </thead>
                <tbody id="tbl-content"></tbody>
            </table>
        </div>

        <partial name="_PaginationPartial" />
    </div>
</div>

<!-- Mustache Template -->
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td>{{DisplayOrder}}</td>
        <td>{{{Name}}}</td>
        <td>{{PhoneNo}}</td>
        <td>{{Email}}</td>
        <td>{{{Url}}}</td>
        <td class="text-center">
            <a href="#" class="btn btn-xs btn-info btn-edit" data-id="{{Id}}" data-name="{{Name}}"><i class="mdi mdi-shield-account"></i></a>
            <a href="#" data-id="{{Id}}" class="btn btn-xs btn-danger btn-delete"><i class="fe-trash-2"></i></a>
        </td>
    </tr>
</script>
@await Html.PartialAsync("_AddEditModal")
